<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_timeline_row"  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <RelativeLayout 
            android:layout_width="wrap_content"
         	android:layout_height="wrap_content">		 	
            <!-- 左面的头像 -->

            <ImageView
                android:id="@+id/one_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/huodong_point" />

		</RelativeLayout>

		<RelativeLayout 
 		    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
		    >                

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/brief_row_background" >

        		<!-- This is the Huodong main part -->

                <TextView
                    android:id="@+id/textViewContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="TextView" />

                </RelativeLayout>
                <ImageView
                     android:layout_width="13dp"
                     android:layout_height="24dp"
                     android:layout_marginTop="5dp"
                     android:src="@drawable/brief_row_triangle" />

			</RelativeLayout>
        
</LinearLayout>